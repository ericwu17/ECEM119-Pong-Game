<!DOCTYPE html>
<html>

<head>
    <title>Sensor Pong</title>
    <style>
        /* fullâ€‘screen canvas, no scrollbars */
        body {
            margin: 0;
            overflow: hidden;
        }

        canvas {
            display: block;
            /* prevent growing beyond 500px */
            max-width: 500px;
            max-height: 500px;
			background: gray;
        }
    </style>
</head>

<body>
    <div style="display:flex; align-items:flex-start;">
        <canvas id="gameCanvas"></canvas>
        <div id="sidebar" style="display:flex; flex-direction:column; margin-left:10px;">
            <!-- top placeholder for future second player -->
            <input id="playerBox" type="text" placeholder="Player 1" readonly style="margin-bottom:8px;" />
            <!-- bottom box shows miss count -->
            <input id="missBox" type="text" value="Misses: 0" readonly />
        </div>
    </div>

    <script src="https://d3js.org/d3.v7.min.js"></script>
    <script type="application/javascript">
        const SERVERADDRESS = "http://127.0.0.1:3000";
        let sensorValue = 0;
		let sensorValue2 = 0;
		let sensorValue3 = 0;
		let sensorValue4 = 0;

        // --------------------------------------------------
        // canvas setup and resizing
        // --------------------------------------------------
        const canvas = document.getElementById("gameCanvas");
        const ctx = canvas.getContext("2d");

        function resize() {
            // constrain the canvas to at most 500x500
            canvas.width = Math.min(window.innerWidth, 500);
            canvas.height = Math.min(window.innerHeight, 500);
        }

        window.addEventListener("resize", resize);
        resize();

        // --------------------------------------------------
        // game objects
        // --------------------------------------------------
        const paddleWidth = 100;
        const paddleHeight = 10;
        const paddleYOffset = 10; // distance from bottom

        const ballRadius = 8;
        let ballX = canvas.width / 2;
        let ballY = canvas.height / 2;
        let ballSpeedX = 1.5;
        let ballSpeedY = 1.5;
        let missCount = 0; // how many times ball missed by bottom paddle
        let topMissCount = 0; // how many times ball missed by top paddle

        // --------------------------------------------------
        // communicate with the server to get the sensor value
        // --------------------------------------------------
        let xmlhttp = new XMLHttpRequest();
        xmlhttp.onreadystatechange = function () {
            if (xmlhttp.readyState === 4 && xmlhttp.status === 200) {
                const resp = JSON.parse(xmlhttp.responseText);
                sensorValue2 = parseFloat(resp.sensorValue2);
				if (sensorValue2 > 0) {
                	sensorValue = parseFloat(resp.sensorValue);
				}
                // capture sensorValue3 and sensorValue4 for top paddle
				sensorValue4 = parseFloat(resp.sensorValue4);
				if (sensorValue4 > 0) {
					sensorValue3 = parseFloat(resp.sensorValue3);
				}
            }
        };

        function getData() {
            xmlhttp.open("POST", SERVERADDRESS, true);
            xmlhttp.setRequestHeader("Content-type", "application/json");
            xmlhttp.send("");
            setTimeout(getData, 10);
        }

        getData();

        // --------------------------------------------------
        // drawing and game logic
        // --------------------------------------------------
        function draw() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // calculate top paddle position from sensorValue3 (-1..1 maps to 0..(width-paddle))
            let topPaddleX = (sensorValue3 + 1) / 2 * (canvas.width - paddleWidth);
            let topPaddleY = paddleYOffset;

            // top paddle
            ctx.fillStyle = "#FF0000";
            ctx.fillRect(topPaddleX, topPaddleY, paddleWidth, paddleHeight);

            // calculate paddle position from sensorValue (-1..1 maps to 0..(width-paddle))
            let paddleX = (sensorValue + 1) / 2 * (canvas.width - paddleWidth);
            let paddleY = canvas.height - paddleHeight - paddleYOffset;

            // bottom paddle
            ctx.fillStyle = "#0095DD";
            ctx.fillRect(paddleX, paddleY, paddleWidth, paddleHeight);

            // ball
            ctx.beginPath();
            ctx.arc(ballX, ballY, ballRadius, 0, Math.PI * 2);
            ctx.fillStyle = "#DD9500";
            ctx.fill();
            ctx.closePath();
        }

        function update() {
            ballX += ballSpeedX;
            ballY += ballSpeedY;

            // left/right walls
            if (ballX + ballRadius > canvas.width || ballX - ballRadius < 0) {
                ballSpeedX = -ballSpeedX;
            }

            // top paddle collision
            let topPaddleX = (sensorValue3 + 1) / 2 * (canvas.width - paddleWidth);
            let topPaddleY = paddleYOffset;
            if (
                ballY - ballRadius <= topPaddleY + paddleHeight &&
                ballY - ballRadius >= topPaddleY &&
                ballX >= topPaddleX &&
                ballX <= topPaddleX + paddleWidth
            ) {
                ballSpeedY = -ballSpeedY;
            }

            // reset if ball goes above top
            if (ballY - ballRadius < 0) {
                // missed the top paddle
                topMissCount++;
                const playerBox = document.getElementById('playerBox');
                if (playerBox) {
                    playerBox.value = 'Misses: ' + topMissCount;
                }
                ballX = canvas.width / 2;
                ballY = canvas.height / 2;
                ballSpeedY = Math.abs(ballSpeedY);
            }

            // bottom (paddle) collision
            let paddleX = (sensorValue + 1) / 2 * (canvas.width - paddleWidth);
            let paddleY = canvas.height - paddleHeight - paddleYOffset;
            if (
                ballY + ballRadius >= paddleY &&
                ballY + ballRadius <= paddleY + paddleHeight &&
                ballX >= paddleX &&
                ballX <= paddleX + paddleWidth
            ) {
                ballSpeedY = -ballSpeedY;
            }

            // reset if ball falls below bottom
            if (ballY - ballRadius > canvas.height) {
                // missed the paddle
                missCount++;
                const missBox = document.getElementById('missBox');
                if (missBox) {
                    missBox.value = 'Misses: ' + missCount;
                }
                ballX = canvas.width / 2;
                ballY = canvas.height / 2;
                ballSpeedY = -Math.abs(ballSpeedY);
            }
        }

        function gameLoop() {
            update();
            draw();
            requestAnimationFrame(gameLoop);
        }

        gameLoop();
    </script>
</body>

</html>